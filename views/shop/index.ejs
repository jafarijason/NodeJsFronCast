<%- include('../includes/header.ejs') %>
    <main class="content">
        <h1 class="page-title">Shop</h1>
        <h2>Product List</h2>
        <%  if(productsArray.length > 0){ %>
                    <% for(let product of productsArray){ %>
                    <div class="product-info">
                        <figure class="product-image">
                            <img src='./images/product-image.png' alt="">
                        </figure>
                        <h2>  <%=product.title %></h2>
                        <p class="product-description">Product Description: <%=product.description %></p>
                        <p class="product-price">Product Price: <%=product.price %></p>
                        <%- include('../includes/add-to-cart.ejs' , {product: product }) %>
                         <a href="/products/<%=product._id %>">Product detail</a>
                    </div>
                    
                    <% } %>
        <% } else {  %>
                <p>There is no Products</p>
        <% }  %>
    </main>
<%- include('../includes/footer.ejs') %>